@using NugetWebsiteModern.Models;

@{
	ViewData["Title"] = "Download";
	var distributions = ViewData["Distributions"] as List<DistributionCategory>;
}

<div class="container">
	<div class="download section-first section">

		<div class="row">

			@foreach (var distribution in distributions)
			{
				<div class="col-md-6">
					<h3>Packages for the Visual Studio</h3>

					<table>
						@foreach (var version in distribution.Distributions)
						{
							<tr>
								<td>@version.Name</td>
								<td>@version.Version</td>

								@if (String.IsNullOrWhiteSpace(version.Link))
								{
									<td>Included</td>
								}
								else
								{
									<td><a href="@version.Link" target="_self">Download</a></td>
								}
							</tr>
						}
					</table>
				</div>
			}

		</div>

	</div>
</div>
